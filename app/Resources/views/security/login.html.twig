{% extends "base.html.twig" %}
{% block herader %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="col-md-4 col-md-offset-4">

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('our_login') }}" method="post">
                <label for="username">Username: </label> <br>
                <input type="text" id="username" name="_username" value="{{ last_username }}"/><br>

                <label for="password">Password: </label><br>
                <input type="password" id="password" name="_password"/><br><br>

                <button type="submit" class="btn btn-primary" formnovalidate>Log In</button>

            </form>
            <br>
            <form method="post" action="{{ path('user_register_form') }}">
                <button type="submit" class="btn btn-primary">Register</button>
            </form>

        </div>
    </div>

{% endblock %}

