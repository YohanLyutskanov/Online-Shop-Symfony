                <h1>{{ msg }}</h1>
            </div>
        {% endfor %}

        <div class="table-responsive">
            <table class="table table-hover" border="1">
                <thead>
                <tr>
                    <th>Comment</th>
                    <th>Rating</th>
                </tr>
                </thead>
                <tbody>
                {% for review in product.reviews %}
                    <tr>
                        <td>{{ review.rating }}</td>
                        <td>{{ review.comment }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {{ render(controller('OnlineShopBundle:Review:leaveReviewForm', {"id": product.id})) }}
